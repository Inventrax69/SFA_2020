<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="@dimen/_5sdp"
    card_view:cardUseCompatPadding="true"
    card_view:layout_gravity="center"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/_5sdp">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartOutlet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/outlet_list_row_new_outlet_info_margin_left">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <ImageView
                        android:id="@+id/imgScheduledOutlet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_calendar"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:padding="@dimen/_1sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_gravity="left|start" />

                    <TextView
                        android:id="@+id/txtOutletName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sri Kanyaka Parameswari Kirana and General Stores - [ 10203040 ]  "
                        android:textStyle="bold"
                        android:layout_weight="9"
                        android:textColor="@color/color_outlet_name"
                        android:textSize="@dimen/_12sdp"
                        android:gravity="left|start"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/txtChannelCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grocery"
                        android:layout_weight="1"
                        android:textSize="@dimen/_10sdp"
                        />

                    <TextView
                        android:id="@+id/txtAccountType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PCI"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/txtOutletType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Key Outlet"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textSize="@dimen/_10sdp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/txtOwnerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textSize="@dimen/_10sdp"
                        />

                    <TextView
                        android:id="@+id/txtPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7799006226"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:textSize="@dimen/_10sdp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp"
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Assets"
                        android:id="@+id/txtCustomerAssets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:textSize="@dimen/_10sdp"
                        android:gravity="left|start" />

                    <View
                        android:layout_weight="1"
                        android:id="@+id/outletVisitStatus"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@color/color_unvisited">

                    </View>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
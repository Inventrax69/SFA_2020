<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/_9sdp"
    android:paddingRight="@dimen/_9sdp"
    android:paddingTop="@dimen/_9sdp"
    >
    <ImageView
        android:id="@+id/settingss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_menu_settings"
        android:layout_alignTop="@+id/languagespinner"
        android:layout_alignBottom="@+id/languagespinner"
        android:layout_toStartOf="@+id/languagespinner" />
    <Spinner
        android:id="@+id/languagespinner"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentEnd="true"
        />



    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bigleap_logo"
        android:layout_above="@+id/layoutLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        />

    <LinearLayout
        android:id="@+id/layoutLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_20sdp"
        >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_user_id"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_action_account"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_action_lock"
                />
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/chkRememberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_chk_remember_password"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_7sdp"

            />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_sign_in_button_text"
            android:layout_marginTop="@dimen/_7sdp"

            android:textColor="@color/colorPrimary"

            android:paddingLeft="@dimen/_40sdp"
            android:paddingRight="@dimen/_40sdp"
            android:background="@drawable/ic_action_submit_button_selector"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/login_button_text_size"/>



    </LinearLayout>



    <ImageView
        android:id="@+id/img_inventrax_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/inventrax_logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"

        />



</RelativeLayout>
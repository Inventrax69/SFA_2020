<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <Spinner
            android:id="@+id/spinnerRouteList"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center_vertical"
            android:spinnerMode="dialog"></Spinner>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />


    <!-- <TextView
         android:id="@+id/txtEmptyView"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center"
         android:text="@string/outlet_list_recycler_empty_view"
         android:visibility="gone"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:maxLines="3"
            android:text="Selected Depot"
            android:textColor="@color/color_order_status"
            android:textSize="@dimen/_22sdp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtSelectedDepot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:maxLines="3"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_22sdp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/check_in"
            android:layout_marginTop="@dimen/_35sdp"
            android:gravity="center"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
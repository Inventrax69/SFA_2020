<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="2">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_qr_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/inputQRCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="QR Code"
                android:enabled="false"
                android:drawableEnd="@drawable/ic_action_qr_code_red"
                />

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>





    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_pepsi_serial_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp">

        <EditText
            android:id="@+id/inputPepsiSerialNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Serial Number" />

    </android.support.design.widget.TextInputLayout>


    <Spinner
        android:id="@+id/spinnerComplaintType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:layout_marginTop="@dimen/_4sdp"
        android:entries="@array/array_complaint_type">
    </Spinner>

    <Spinner
        android:id="@+id/spinnerCoolerVolume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:layout_marginTop="5dp"
        android:entries="@array/array_cooler_capacity">
    </Spinner>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:textSize="18sp"
        android:text="Parts added"/>


    <EditText
        android:id="@+id/etPartsAdded"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:gravity="top"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/ic_action_submit_button_selector"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Submit"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginStart="@dimen/_4sdp"
            android:background="@drawable/ic_action_submit_button_selector"
            android:textColor="@color/colorPrimary"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_action_submit_button_selector"
            android:textColor="@color/colorPrimary"
            android:text="Delete"
            android:layout_margin="@dimen/_2sdp"
            android:textAllCaps="false"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancel"
            android:textAllCaps="false"
            android:layout_margin="@dimen/_2sdp"
            android:background="@drawable/ic_action_submit_button_selector"
            android:textColor="@color/colorPrimary"/>


    </LinearLayout>


</LinearLayout>
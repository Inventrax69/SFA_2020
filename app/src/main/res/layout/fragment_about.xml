<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fragment_about_layout_margin"
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_44sdp"
        android:text="@string/fragment_about_txt_version"
        android:textSize="@dimen/_13sdp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtVersion"
        android:layout_below="@+id/txtVersion"
        android:text="@string/fragment_about_txt_copy_right"
        android:textSize="@dimen/_13sdp"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:autoLink="web"
        android:text="@string/fragment_about_txt_inventrax_link"
        android:textSize="@dimen/_13sdp"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/textView1"
        android:textSize="@dimen/_13sdp"
        android:text="@string/fragment_about_txt_visit" />

    <TextView
        android:id="@+id/txtVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_marginLeft="@dimen/_12sdp"
        android:textSize="@dimen/_13sdp"
        android:layout_toRightOf="@+id/textView1" />
    
   <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.5"
        android:src="@drawable/inventrax_logo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Update"
        android:id="@+id/btnCheckUpdate"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_action_check_update"
        android:background="@null"
        android:textSize="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_16sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Help Line Number : 8333858060"
        android:id="@+id/txtHelpLine"
        android:layout_above="@+id/imageView1"
        android:drawableLeft="@drawable/ic_action_phone_call"
        android:textSize="@dimen/_13sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" User Manual"
        android:id="@+id/txtYouTubeLink"
        android:layout_above="@+id/txtHelpLine"
        android:drawableLeft="@drawable/ic_action_youtube_link"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_13sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLocation"
        android:layout_above="@+id/txtYouTubeLink"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_13sdp" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        >


        <TableLayout
            android:id="@+id/tableDeliveryInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_12sdp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/OutletCode"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:text=":"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:id="@+id/txtOutletCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25014010"
                    android:textSize="@dimen/_12sdp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/OutletName"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:text=":"
                    android:textSize="@dimen/_12sdp"

                    />

                <TextView
                    android:id="@+id/txtOutletName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MVP Super Market"
                    android:textSize="@dimen/_12sdp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/CrownValue"
                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="center_vertical"
                    />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_crowns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/inputCrownsValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:inputType="numberDecimal"
                    android:hint="@string/CrownValue"
                    />
                </android.support.design.widget.TextInputLayout>

            </TableRow>

            <TableRow
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/number_of_cases"
                    android:textSize="@dimen/_12sdp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:text=":"
                    android:textSize="@dimen/_12sdp"

                    />

                <TextView
                    android:id="@+id/txtNoOfCases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp" />

            </TableRow>


            <TableRow
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/number_of_bottles"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:text=":"
                    android:textSize="@dimen/_12sdp"

                    />

                <TextView
                    android:id="@+id/txtNoOfBottles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_cases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputCaseQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/Cases"
                        android:inputType="number"
                        android:textSize="@dimen/_12sdp" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:text=":"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="invisible"

                    />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_bottle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputBottleQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/Bottles"
                        android:textSize="@dimen/_12sdp"
                        android:inputType="number"
                        />

                </android.support.design.widget.TextInputLayout>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_crates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    >

                    <EditText
                        android:id="@+id/inputCrateQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/Crates"
                        android:textSize="@dimen/_12sdp"
                        android:inputType="number"
                        />

                </android.support.design.widget.TextInputLayout>

            </TableRow>


            <TableRow
                android:id="@+id/tableRowCreditAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_credit_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    >

                    <EditText
                        android:id="@+id/inputCreditAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/CreditAmount"
                        android:textSize="@dimen/_16sdp"
                        android:inputType="number"
                        />

                </android.support.design.widget.TextInputLayout>

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp">

                <Button
                    android:id="@+id/btnReceive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_span="3"
                    android:background="@drawable/ic_action_submit_button_selector"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="@string/Receive"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp" />

            </TableRow>

        </TableLayout>


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:src="@drawable/ic_action_return" />

</RelativeLayout>
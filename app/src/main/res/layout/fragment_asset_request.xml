<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_OutletStatus"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:text="Outlet Status"
                        android:background="@drawable/ic_crf_custom_border_layout"
                        android:textSize="@dimen/_12sdp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tv_PresentStatus"
                        android:layout_toRightOf="@+id/tv_OutletStatus"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/ic_crf_custom_border_layout"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:text="Present Status"/>

                    <TextView
                        android:id="@+id/tv_ProposedStatus"
                        android:layout_toRightOf="@+id/tv_PresentStatus"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:background="@drawable/ic_crf_custom_border_layout"
                        android:text="Proposed Status"/>

                    <TextView
                        android:id="@+id/tv_PI1"
                        android:layout_toRightOf="@+id/tv_OutletStatus"
                        android:layout_below="@+id/tv_PresentStatus"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/ic_crf_custom_border_layout"
                        android:text="PCI"
                        android:textSize="@dimen/_12sdp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tv_KO1"
                        android:layout_toRightOf="@+id/tv_PI1"
                        android:layout_below="@+id/tv_PresentStatus"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:background="@drawable/ic_crf_custom_border_layout"
                        android:text="CCX"/>

                    <TextView
                        android:id="@+id/tv_Mix1"
                        android:layout_toRightOf="@+id/tv_KO1"
                        android:layout_below="@+id/tv_PresentStatus"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/ic_crf_custom_border_layout"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:text="MIX"/>

                    <TextView
                        android:id="@+id/tv_PI2"
                        android:layout_toRightOf="@+id/tv_Mix1"
                        android:layout_below="@+id/tv_ProposedStatus"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="PCI"
                        android:textSize="@dimen/_12sdp"
                        android:background="@drawable/ic_crf_custom_border_layout"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tv_KO2"
                        android:layout_toRightOf="@+id/tv_PI2"
                        android:layout_below="@+id/tv_ProposedStatus"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:background="@drawable/ic_crf_custom_border_layout"
                        android:text="CCX"/>

                    <TextView
                        android:id="@+id/tv_Mix2"
                        android:layout_toRightOf="@+id/tv_KO2"
                        android:layout_below="@+id/tv_ProposedStatus"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/ic_crf_custom_border_layout"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:text="MIX"/>

                    <TextView
                        android:id="@+id/tv_Volume"
                        android:layout_below="@+id/tv_OutletStatus"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:text="Volume" />

                    <TextView
                        android:id="@+id/tv_CoolerSize"
                        android:layout_below="@+id/tv_Volume"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:text="Cooler Size" />

                    <TextView
                        android:id="@+id/tv_NightGuard"
                        android:layout_below="@+id/tv_CoolerSize"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:text="Night Guard" />

                    <TextView
                        android:id="@+id/tv_GlassInCS"
                        android:layout_below="@+id/tv_NightGuard"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:inputType="number"
                        android:text="Glass in C/S" />

                    <EditText
                        android:id="@+id/input_pre_pi_volume"
                        android:layout_toRightOf="@+id/tv_OutletStatus"
                        android:layout_below="@+id/tv_OutletStatus"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:text=""
                        android:inputType="number"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/input_pre_ko_volume"
                        android:layout_toRightOf="@+id/input_pre_pi_volume"
                        android:layout_below="@+id/tv_OutletStatus"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:gravity="center"
                        android:inputType="number"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:text=""/>

                    <EditText
                        android:id="@+id/input_pre_mix_volume"
                        android:layout_toRightOf="@+id/input_pre_ko_volume"
                        android:layout_below="@+id/tv_OutletStatus"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:gravity="center"
                        android:inputType="number"
                        android:text=""/>

                    <EditText
                        android:id="@+id/input_pro_pi_volume"
                        android:layout_toRightOf="@+id/input_pre_mix_volume"
                        android:layout_below="@+id/tv_OutletStatus"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:text=""
                        android:inputType="number"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/input_pro_ko_volume"
                        android:layout_toRightOf="@+id/input_pro_pi_volume"
                        android:layout_below="@+id/tv_OutletStatus"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:gravity="center"
                        android:inputType="number"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:text=""/>

                    <EditText
                        android:id="@+id/input_pro_mix_volume"
                        android:layout_toRightOf="@+id/input_pro_ko_volume"
                        android:layout_below="@+id/tv_OutletStatus"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:gravity="center"
                        android:inputType="number"
                        android:text=""/>

                    <EditText
                        android:id="@+id/input_pre_pi_cooler_size"
                        android:layout_toRightOf="@+id/tv_CoolerSize"
                        android:layout_below="@+id/tv_Volume"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:text=""
                        android:inputType="number"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/input_pre_ko_cooler_size"
                        android:layout_toRightOf="@+id/input_pre_pi_cooler_size"
                        android:layout_below="@+id/tv_Volume"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:gravity="center"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:inputType="number"
                        android:text=""/>

                    <EditText
                        android:id="@+id/input_pre_mix_cooler_size"
                        android:layout_toRightOf="@+id/input_pre_ko_cooler_size"
                        android:layout_below="@+id/tv_Volume"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:gravity="center"
                        android:inputType="number"
                        android:text=""/>

                    <EditText
                        android:id="@+id/input_pro_pi_cooler_size"
                        android:layout_toRightOf="@+id/input_pre_mix_cooler_size"
                        android:layout_below="@+id/tv_Volume"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:text=""
                        android:inputType="number"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/input_pro_ko_cooler_size"
                        android:layout_toRightOf="@+id/input_pro_pi_cooler_size"
                        android:layout_below="@+id/tv_Volume"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:gravity="center"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:inputType="number"
                        android:text=""/>

                    <EditText
                        android:id="@+id/input_pro_mix_cooler_size"
                        android:layout_toRightOf="@+id/input_pro_ko_cooler_size"
                        android:layout_below="@+id/tv_Volume"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:gravity="center"
                        android:inputType="number"
                        android:text=""/>

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:layout_below="@+id/tv_CoolerSize"
                        android:layout_toRightOf="@id/tv_NightGuard"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:gravity="center">

                        <CheckBox
                            android:id="@+id/chk_pre_pi_volume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:layout_below="@+id/tv_CoolerSize"
                        android:layout_toRightOf="@id/linearLayout1"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:gravity="center">

                        <CheckBox
                            android:id="@+id/chk_pre_ko_volume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:layout_below="@+id/tv_CoolerSize"
                        android:layout_toRightOf="@id/linearLayout2"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:gravity="center">

                        <CheckBox
                            android:id="@+id/chk_pre_mix_volume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:layout_below="@+id/tv_CoolerSize"
                        android:layout_toRightOf="@id/linearLayout3"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:gravity="center">

                        <CheckBox
                            android:id="@+id/chk_pro_pi_volume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout5"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:layout_below="@+id/tv_CoolerSize"
                        android:layout_toRightOf="@id/linearLayout4"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:gravity="center">

                        <CheckBox
                            android:id="@+id/chk_pro_ko_volume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout6"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:layout_below="@+id/tv_CoolerSize"
                        android:layout_toRightOf="@id/linearLayout5"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:gravity="center">

                        <CheckBox
                            android:id="@+id/chk_pro_mix_volume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/input_pre_pi_glasses"
                        android:layout_toRightOf="@+id/tv_GlassInCS"
                        android:layout_below="@+id/tv_NightGuard"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:text=""
                        android:inputType="number"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/input_pre_ko_glasses"
                        android:layout_toRightOf="@+id/input_pre_pi_glasses"
                        android:layout_below="@+id/tv_NightGuard"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:gravity="center"
                        android:inputType="number"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:text=""/>

                    <EditText
                        android:id="@+id/input_pre_mix_glasses"
                        android:layout_toRightOf="@+id/input_pre_ko_glasses"
                        android:layout_below="@+id/tv_NightGuard"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:gravity="center"
                        android:inputType="number"
                        android:text=""/>

                    <EditText
                        android:id="@+id/input_pro_pi_glasses"
                        android:layout_toRightOf="@+id/input_pre_mix_glasses"
                        android:layout_below="@+id/tv_NightGuard"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:text=""
                        android:inputType="number"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/input_pro_ko_glasses"
                        android:layout_toRightOf="@+id/input_pro_pi_glasses"
                        android:layout_below="@+id/tv_NightGuard"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:gravity="center"
                        android:inputType="number"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:text=""/>

                    <EditText
                        android:id="@+id/input_pro_mix_glasses"
                        android:layout_toRightOf="@+id/input_pro_ko_glasses"
                        android:layout_below="@+id/tv_NightGuard"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/ic_crf_custom_border_layout_two"
                        android:gravity="center"
                        android:inputType="number"
                        android:text=""/>

                </RelativeLayout>

            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cooler Type : "
                        android:textSize="18sp"/>

                    <RadioGroup
                        android:id="@+id/rbgCoolerType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbVISI"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VISI"
                            android:checked="true"
                            />

                        <RadioButton
                            android:id="@+id/rbEBC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="EBC" />

                    </RadioGroup>

                </LinearLayout>



                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/inputRemarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Remarks" />

                </android.support.design.widget.TextInputLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ic_action_submit_button_selector"
                        android:textColor="@color/colorPrimary"
                        android:text="Cancel"/>

                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ic_action_submit_button_selector"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="Submit"/>

                </LinearLayout>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fabReturn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:src="@drawable/ic_action_return"
                    />

            </LinearLayout>




        </LinearLayout>




    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>



